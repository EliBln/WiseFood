<%# app/views/products/show.html.erb %>
<div class="product-show-container">
  <%= link_to products_path, class: "back-button" do %>
    <div class="back-icon"></div>
  <% end %>

  <h1 class="product-title"><%= @product.name.capitalize %></h1>

  <div class="product-image">
    <%= image_tag @product.categorie.img_url if @product.categorie.img_url.present? %>
  </div>

<div class="days-remaining">
  <span class="days"><%= @product.days_remaining %>j</span>
</div>

  <div class="expiration-card">
    <p class="expiration-label">Date de p√©remption</p>
    <p class="expiration-date"><%= @product.expiration_date.strftime("%d/%m/%Y") %></p>
  </div>
  </div>

  <%= link_to edit_product_path(@product), class: "edit-button" do %>
    <div class="edit-icon"></div>
  <% end %>
</div>
